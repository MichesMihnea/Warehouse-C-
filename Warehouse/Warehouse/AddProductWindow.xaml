<Window x:Class="Warehouse.AddProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Warehouse"
        mc:Ignorable="d"
        Title="AddProductWindow" Height="200" Width="236">
    <Grid>
        <DockPanel>
        <TextBox x:Name="productNameBox" HorizontalAlignment="Center" Margin="0,42,0,0" Text="Product Name" TextWrapping="Wrap" VerticalAlignment="Top" Width="164" DockPanel.Dock="Top"/>
        <Button Content="Add Product" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,52,0,0" Click="Button_Click" DockPanel.Dock="Bottom" />
        </DockPanel>
    </Grid>
</Window>
